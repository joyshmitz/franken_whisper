    "timestamp_tolerance_sec": 0.05,
    "require_text_exact": true,
    "require_speaker_exact": true
  },
  "expected": [
    {
      "start_sec": 0.0,
      "end_sec": 1.0,
      "text": "hello",
      "speaker": "SPEAKER_00",
