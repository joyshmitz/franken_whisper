    {
      "start_sec": 0.01,
      "end_sec": 1.02,
      "text": "hello",
      "speaker": "spk_0",
      "confidence": 0.93
    },
    {
      "start_sec": 1.01,
      "end_sec": 2.01,
      "text": "world",
      "speaker": "spk_1",
      "confidence": 0.90
